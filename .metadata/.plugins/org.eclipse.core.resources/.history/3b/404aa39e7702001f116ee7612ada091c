package course;

import java.util.Locale;
import java.util.Scanner;

import entities.Entities;

public class Ex05 {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		System.out.print("Entre com o Numero da conta: ");
		int conta = sc.nextInt();

		System.out.printf("Entre com o nome do Usuario: ");
		String usuario = sc.next();

		System.out.printf("Haverá um deposito inicial? (y/n) ");
		String resp = sc.next();

		while (resp.equals("y") || resp.equals("n")) {
			if (resp.equals("y")) {
				System.out.printf("Entre com o valor inicial do deposito: ");
				double ini_deposito = sc.nextDouble();
				break;
			} else if (resp.equals("n")) {
				System.out.println("Sem deposito inicial!");
				break;
			} else {
				System.out.println("Informação incorreta!");
			}
		}
		Entities entities = new Entities(conta, usuario, resp);

		System.out.println(entities.getConta());

	}

}
