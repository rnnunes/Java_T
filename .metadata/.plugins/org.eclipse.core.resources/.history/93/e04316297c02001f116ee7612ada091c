package entities;

public class Entities {

	// Atributos
	private int conta;
	private String usuario;
	private double saldo;

	// Construtores
	public Entities(int conta, String usuario, double saldo) {
		this.conta = conta;
		this.usuario = usuario;
		this.saldo = saldo;
	}

	// Encapsulamento
	public int getConta() {
		return conta;
	}
	
	public String getUsuario() {
		return usuario;
	}
	
	public double getSaldo() {
		return saldo;
	}

	// Metodos
	public void addDeposito (double saldo) {
		this.saldo += saldo;
	}
	
	public void saque (double saldo) {
		this.saldo -= saldo;
	}
 	
}
