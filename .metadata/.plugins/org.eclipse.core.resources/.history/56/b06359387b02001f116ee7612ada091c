package course;

import java.util.Locale;
import java.util.Scanner;

import entities.Entities;

public class Ex05 {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		System.out.print("Entre com o Numero da conta: ");
		int conta = sc.nextInt();

		System.out.printf("Entre com o nome do Usuario: ");
		String usuario = sc.next();

//		System.out.printf("Haver√° um deposito inicial? (y/n) ");
//		String resp = sc.next();
		
		System.out.printf("Entre com o valor inicial do deposito: ");
		double saldo = sc.nextDouble();

		Entities entities = new Entities(conta, usuario, saldo);

		System.out.printf("%nDados da Conta: ");
		System.out.printf("Conta %d, Usuario: %s, Saldo: $ %.2f", entities.getConta(), entities.getUsuario(), entities.getSaldo());

		System.out.printf("%nEntre com o valor do deposito: ");
		double dep = sc.nextDouble();
		entities.addDeposito(dep);
		System.out.printf("%nDados da conta alterados: %n");
		System.out.printf("Conta %d, Usuario: %s, Saldo: $ %.2f", entities.getConta(), entities.getUsuario(), entities.getSaldo());
		
		System.out.printf("%nEntre com o valor do saque: %n");
		double saq = sc.nextDouble();
		entities.saque(saq);
		System.out.printf("%nDados da conta alterados: %n");
		System.out.printf("Conta %d, Usuario: %s, Saldo: $ %.2f", entities.getConta(), entities.getUsuario(), entities.getSaldo());
	}

}
